#!/bin/bash
initDir=`pwd`

read -p "Update packages? [Y/n]" -n 1 -r
echo
if [[ $REPLY =~ ^[Yy]|[]$ ]]
then
    echo "-- Installing package updates..."
        sudo apt update
        sudo apt upgrade -y
fi

read -p "Setup vim? [Y/n]" -n 1 -r
echo
if [[ $REPLY =~ ^[Yy]$ ]]
then
    read -p "- Install vim, tmux, git, and curl? [Y/n]" -n 1 -r
    echo
    if [[ $REPLY =~ ^[Yy]$ ]]
    then
        echo "-- Installing packages..."
            sudo apt install vim tmux git curl
        fi
    echo "-- Installing vim pathogen..."
        mkdir -p ~/.vim/autoload ~/.vim/bundle
        curl -LSso ~/.vim/autoload/pathogen.vim https://tpo.pe/pathogen.vim
    echo "-- Cloning vim packages..."
        cd ~/.vim/bundle
        git clone https://github.com/preservim/nerdtree
        git clone https://github.com/tpope/vim-surround
        git clone https://github.com/altercation/vim-colors-solarized 
    echo "-- Copying dotfiles..."
        cd $initDir
        cp ./configs/.vimrc ~
fi

read -p "Setup tmux? [Y/n]" -n 1 -r
echo
if [[ $REPLY =~ ^[Yy]$ ]]
then
    echo "--  Installing dotfile to home directory..."
        cd $initDir
        cp ./configs/.tmux.conf ~ 
fi
