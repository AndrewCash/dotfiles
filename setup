#!/bin/bash
initDir=$(pwd)

read -rp "Add aliases? [y/n]" yn
case $yn in
	[Yy]* ) 
		echo "-- Copying aliases..."
		cd "$initDir" || exit 
		cp ./configs/.aliases ~
		;;
	[Nn]* )
		;;
esac

read -rp "Setup vim? [y/n]" yn
case $yn in
	[Yy]* ) 
		echo "-- Installing vim pathogen..."
		mkdir -p ~/.vim/autoload ~/.vim/bundle
		curl -LSso ~/.vim/autoload/pathogen.vim https://tpo.pe/pathogen.vim
		echo "-- Cloning vim packages..." 
		git -C ~/.vim/bundle clone https://github.com/preservim/nerdtree
		git -C ~/.vim/bundle clone https://github.com/tpope/vim-surround
		git -C ~/.vim/bundle clone https://github.com/altercation/vim-colors-solarized
		echo "-- Copying dotfiles..."
		cd "$initDir" || exit
		cp ./configs/.vimrc ~
		;;
	[Nn]* )
		;;
esac

read -rp "Setup tmux? [y/n]" yn
case $yn in
	[Yy]* ) 
		echo "--  Installing dotfile to home directory..."
		cd "$initDir" || exit
		cp ./configs/.tmux.conf ~ 
		;;
	[Nn]* )
		;;
esac


