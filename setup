#!/bin/bash


read -p "Copy dotfiles to home directory? " -n 1 -r
echo    # (optional) move to a new line
if [[ $REPLY =~ ^[Yy]$ ]]
then
echo "Installing dotfiles to home directory..."
cp .aliases ~
cp .bashrc ~
cp .gitconfig ~
cp .vimrc ~
cp .tmux.conf ~
printf "\n"
fi

read -p "Install updates? " -n 1 -r
echo    # (optional) move to a new line
if [[ $REPLY =~ ^[Yy]$ ]]
then
echo "Installing updates..."
sudo apt update
sudo apt upgrade
fi

read -p "Install software? " -n 1 -r
echo   # (optional) move to a new line
if [[ $REPLY =~ ^[Yy]$ ]]
then "Installing vim htop deluge deluged deluge-console unace unrar zip unzip p7zip-full p7zip-rar screenfetch"
sudo apt install vim htop deluge deluged deluge-console unace unrar zip unzip p7zip-full p7zip-rar screenfetch
fi

read -p "Add extra repositories? " -n 1 -r
echo    # (optional) move to a new line
if [[ $REPLY =~ ^[Yy]$ ]]
then
echo "Adding repositories"
sudo add-apt-repository -y ppa:transmissionbt/ppa
sudo add-apt-repository -y ppa:otto-kesselgulasch/gimp
echo 'deb http://download.videolan.org/pub/debian/stable/ /' | sudo tee -a /etc/apt/sources.list.d/libdvdcss.list &&
echo 'deb-src http://download.videolan.org/pub/debian/stable/ /' | sudo tee -a /etc/apt/sources.list.d/libdvdcss.list &&
wget -O - http://download.videolan.org/pub/debian/videolan-apt.asc|sudo apt-key add -
fi

read -p "Install Docker? " -n 1 -r
echo    # (optional) move to a new line
if [[ $REPLY =~ ^[Yy]$ ]]
then
#install Docker
sudo apt-get remove docker docker-engine docker.io
sudo apt-get install \
    apt-transport-https \
    ca-certificates \
    curl \
    software-properties-common
curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo apt-key add -
sudo add-apt-repository \
   "deb [arch=amd64] https://download.docker.com/linux/ubuntu \
    $(lsb_release -cs) \
    stable"
sudo apt-get update
sudo apt-get install docker-ce
fi


read -p "Clean up package manager? " -n 1 -r
echo    # (optional) move to a new line
if [[ $REPLY =~ ^[Yy]$ ]]
then
echo "Cleaning Up..." &&
sudo apt -f install &&
sudo apt autoremove &&
sudo apt -y autoclean &&
sudo apt -y clean
fi
